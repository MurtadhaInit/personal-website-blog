---
// library imports
import { Image } from "astro:assets";

// utils imports
import { slugify } from "@js/utils.js";

const { category, title, date, author, image } = Astro.props;
---

<header>
  <div>
    <small>
      <a href={`/category/${slugify(category)}/`}>{category}</a>
    </small>
    <h1>{title}</h1>
    <p>
      by {author} â€¢ {date.toLocaleDateString()}
    </p>
  </div>
  <Image
    src={image.src}
    alt={image.alt}
    width={1200}
    height={600}
    format="avif"
  />
</header>
