---
import Link from "@components/ui/Link.astro";

interface Props {
  prevURL: string;
  nextURL: string;
}

const { prevURL, nextURL } = Astro.props;
---

<nav>
  {
    prevURL && (
      <Link
        text="Previous"
        href={prevURL}
        style={"primary"}
        icon={{
          name: "tabler:arrow-big-left-line",
          side: "left",
        }}
      />
    )
  }
  {
    nextURL && (
      <Link
        text="Next"
        href={nextURL}
        style={"primary"}
        icon={{
          name: "tabler:arrow-big-right-line",
          side: "right",
        }}
      />
    )
  }
</nav>
