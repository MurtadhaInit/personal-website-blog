---
// component imports
import Seo from "@components/Seo.astro";
import favicon from "@assets/favicon.svg";

const { title, description, image, frontmatter, robots } = Astro.props;
---

<head>
  <meta charset="UTF-8" />
  <link rel="icon" type="image/svg+xml" href={favicon.src} />
  <link rel="sitemap" href="/sitemap-index.xml" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
  <meta name="description" content={description} />

  <!-- TODO: fix this whole seo thing especially the parameters passed between components -->
  <!-- <Seo {title} {description} url={Astro.url} {image} {frontmatter} {robots} /> -->
</head>
